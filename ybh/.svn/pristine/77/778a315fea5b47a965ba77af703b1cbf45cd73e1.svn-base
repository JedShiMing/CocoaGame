

var setClickWidgetAttach = function (node) {
    for (var i = 0; i < node.childrenCount; ++i) {
        setClickWidgetAttach(node.children[i]);
    }
    if (cc.js.getClassName(node) == 'cc.Scene') return;
    if (node.getComponent('cc.Button') || node.getComponent('cc.Toggle')) {
        var com = node.getComponent('AFClickWidgetAttach');
        if (com) return;
        node.addComponent('AFClickWidgetAttach');
    }
};

module.exports = {
    'add-click-widget-attach': function (event) {
        var node = cc.director.getScene();
        setClickWidgetAttach(node);
        if (event.reply) {
            event.reply("设置按钮attach成功！");
        }
    }
};