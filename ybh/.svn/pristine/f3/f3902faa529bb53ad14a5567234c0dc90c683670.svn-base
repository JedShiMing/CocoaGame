cc.Class({
    extends: cc.Component,

    properties: {
        photo: {
            default: null,
            type: cc.Node,
            displayName: "相框",
        },
        photoBig: {
            default: null,
            type: cc.Node,
            displayName: "大相框",
        },
        photoSmall: {
            default: null,
            type: cc.Node,
            displayName: "小相框",
        },
    },

    onLoad: function () {

    },

    setPhoto: function (url) {

        this.photo.active = true;
        this.photoBig.active = false;
        this.photoSmall.active = false;

        this.loadPhoto(this.photo, url);
    },


    setBigPhoto: function (url) {

        this.photo.active = false;
        this.photoBig.active = true;
        this.photoSmall.active = false;
        this.loadPhoto(this.photoBig, url);
    },


    setSmallPhoto: function (url) {

        this.photo.active = false;
        this.photoBig.active = false;
        this.photoSmall.active = true;
        this.loadPhoto(this.photoSmall, url);
    },

    loadPhoto: function (photoNode, url) {
        if (!url) {
            return;            
        }
        
        var photo = photoNode.getChildByName("photo");
        var photoSprite = photo.getComponent(cc.Sprite);
        cc.loader.load({ url: url, type: "jpg" }, (err, res) => {
            if (err) {
                console.log("err: PhotoPrefab.js loadPhoto ", err);
                return;
            }
            if (photoSprite && photoSprite.spriteFrame) {
                photoSprite.spriteFrame = new cc.SpriteFrame(res);
            } else {
                cc.error('头像加载失败', err);
            }
        });
    },
});
